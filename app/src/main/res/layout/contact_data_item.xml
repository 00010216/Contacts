<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/information_layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/custom_rectangle_shape">
            <TextView
                android:id="@+id/information_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/text_margin"
                android:paddingTop="8dp"
                android:text="Phone number"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/contact_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:text="7754-7889"
                android:textColor="#fff"
                android:textSize="14sp"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>